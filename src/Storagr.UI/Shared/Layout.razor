@inherits LayoutComponentBase

<div class="is-flex is-flex-grow-1 is-flex-direction-column is-justify-content-flex-start is-align-items-stretch is-fullheight">
    <div>
        <LayoutHeader />
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="is-flex is-flex-grow-1 is-flex-shrink-0">
                <div class="container">
                    @Body
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <Login />
        </NotAuthorized>
        <Authorizing>
            <Loading />
        </Authorizing>
    </AuthorizeView>
    

    <div>
        <LayoutFooter />
    </div>
</div>